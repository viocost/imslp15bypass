{
	"name": "IMSLP 15 bypass",
	"version": "2.0",
	"manifest_version" : 2,
	"description": "Download sheet music on imslp.org without 15 sec waiting",
	"browser_action": {
		"default_icon": "icon-disabled.png"
	},

	"icons": {
		"128": "icon.png",
		"256": "icon256.png"
	},

	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},

	"permissions": [
		"tabs"
	],

	"content_scripts": [
		{
			"matches": ["http://imslp.org/*", "https://imslp.org/*" ],
			"js": ["imslp_15bypass.js"]
		}
	]
}
